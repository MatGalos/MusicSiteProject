@{
}

<style>
    input {
        border-top-style: hidden;
        border-left-style: hidden;
        border-right-style: hidden;
        left:30%;
        width:30%;
    }
    label {
        width:30%;
    }
    input:focus {
        outline: #adb8b0;
    }
    .field-validation-error{
        color:red;
        font:bold;
    }
    .input-validation-error {
        border-bottom-color: red;
        background-color: #edafaf;
    }
</style>

<form asp-action="Register" method="post">
    <div><span asp-validation-for="Name"></span></div>
    <label>First Name</label>
    <input asp-for="Name" /><br />
    <div><span asp-validation-for="LastName"></span></div>
    <label>Last Name</label>
    <input asp-for="LastName" /><br />
    <div><span asp-validation-for="UserName"></span></div>
    <label>User Name</label>
    <input asp-for="UserName" /><br />
    <div><span asp-validation-for="Password"></span></div>
    <label>Password</label>
    <input asp-for="Password" type="password" /><br />
    <div><span asp-validation-for="EMail"></span></div>
    <label>E-Mail Address</label>
    <input asp-for="EMail" /><br />
    <div><span asp-validation-for="CreationDate"></span></div>
    <label>Date of birth</label>
    <input asp-for="CreationDate" /><br />
    <button type="submit">Zapisz</button>
</form>