Modify Your E-Mail, User Name and password @Model.name
<style>
    input {
        border-top-style: hidden;
        border-left-style: hidden;
        border-right-style: hidden;
        left: 30%;
        width: 30%;
    }

    label {
        width: 30%;
    }

    input:focus {
        outline: #adb8b0;
    }

    .field-validation-error {
        color: red;
        font: bold;
    }

    .input-validation-error {
        border-bottom-color: red;
        background-color: #edafaf;
    }
</style>

<form asp-action="ModifyUserList" method="post">
    <div><span asp-validation-for="userName"></span></div>
    <label>User Name</label>
    <input asp-for="userName" value="@Model.userName" /><br />
    <div><span asp-validation-for="password"></span></div>
    <label>Password</label>
    <input asp-for="password" type="password"  value="@Model.password"/><br />
    <div><span asp-validation-for="eMail"></span></div>
    <label>E-Mail Address</label>
    <input asp-for="eMail" value="@Model.eMail"/><br />
    <input asp-for="Id" value="@Model.Id" type="hidden" />
    <button type="submit">Zapisz</button>
</form>